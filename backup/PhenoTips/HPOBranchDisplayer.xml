$xwiki.jsx.use('PhenoTips.HPOBranchDisplayer')##
#if ($xcontext.action == 'edit')
#set ($firstLevel = true)
##
##
#macro (_displayItem $itemId $itemName $itemData)
  &lt;input type="radio" id="${prefix}${name}_${itemId}" #if("$!{value}" == $itemId)checked="checked"#end name="${prefix}${name}" value="${itemId}" title="${itemName}"/>&lt;label for="${prefix}${name}_${itemId}" title="$!{itemName}$!{util.newline}$!{itemData.def}">${itemName}&lt;/label>
#if("$!{itemData}" != '')
  &lt;span class="fa fa-info-circle phenotype-qualifier-info xHelpButton" title="${itemId}">&lt;/span>
#end
#end
##
##
#macro (_displayChildren $rootId)
  #set ($term = $services.ontologies.resolveTerm($rootId))
  #set($childrenList = $services.ontologies.hpo.search({'is_a': $term.id}))
  #if ($childrenList.size() > 0)
  &lt;ul>
  #if ($firstLevel)&lt;li class="hpo-unknown">#_displayItem('', 'Unknown')&lt;/li>#set($firstLevel = false)#end
  #set($macro.childrenMap = {})
  #foreach($item in $childrenList)
    #set ($discard = $macro.childrenMap.put($item.id, $item))
  #end
  #foreach($orderedItemId in $order)
    #set ($foreach.item = $macro.childrenMap.get($orderedItemId))
    #if ("$!{foreach.item}" != '' &amp;&amp; "$!foreach.item.id" != '')&lt;li class="term-entry">#_displayItem("${foreach.item.id}", "${foreach.item.name}", $foreach.item)#_displayChildren($foreach.item.id)&lt;/li>#end
  #end
  &lt;/ul>
  #end
#end

#if ($startWith &amp;&amp; $order)
{{html wiki=false clean=false}}
&lt;div class="hpo-branch">
#_displayChildren($startWith)
&lt;/div>
{{/html}}
#end
#elseif ("$!{value}" != '')
  $services.ontologies.resolveTerm($value).name
#end
{{/velocity}}</content>
