#macro(json__displayJSONFragment $data)
  #if ($data.keySet())
  {
    #foreach ($key in $data.keySet())
       "${key}" : #json__displayJSONFragment($data.get($key))#if ($foreach.hasNext()),#end

    #end
  }
  #elseif ($data.size())
    [
    #foreach ($item in $data)
      #json__displayJSONFragment($item)#if ($foreach.hasNext()),#end

    #end
    ]##
  #else
    "$!{data}"##
  #end
#end

#macro(json__displayJSON $results $metadata)
{
   "returnedrows" : "$results.size()",
   #foreach ($k in $metadata.keySet())
     "$k" : #json__displayJSONFragment($metadata.get($k)),
   #end
   #if ("$!request.reqNo" != '')
     "reqNo" : $!{request.reqNo},
   #end
   "rows" : #json__displayJSONFragment($results)
}
#end

#macro(json__respondJSON $results $metadata)
  $response.setContentType('application/json')
  #json__displayJSON($results $metadata)
#end
