    <property>
      <content>{{include document="Blog.BlogCode"/}}&#xd;
&#xd;
{{velocity}}&#xd;
#getBlogEntriesBaseQuery($query)&#xd;
#set($query = "$!{query} and isPublished.value = 1 and hidden.value &lt;&gt; 1")&#xd;
#set($recentEntries = $services.query.hql("${query} order by publishDate.value desc").setLimit(10).setOffset(0).execute())&#xd;
#if($recentEntries.size() > 0 || $showEmptyPanels)&#xd;
  #panelheader($services.localization.render('xe.blog.recentposts.paneltitle'))&#xd;
  #foreach($entryDoc in $xwiki.wrapDocs($recentEntries))&#xd;
    #getEntryObject($entryDoc $entryObj)&#xd;
; (%style="font-size: .8em"%)$!{xwiki.jodatime.getDateTimeFormatterForPattern('MMM dd, YYYY').print($entryObj.getProperty('publishDate').value)}(%%)&#xd;
: [[$!{entryDoc.display('title', 'view', $entryObj).replaceAll('(\[|\]|\||>)', '~~$1')}>>$!{services.model.serialize($entryDoc.documentReference).replaceAll('(\[|\]|\||>)', '~$1')}]]&#xd;
  #end&#xd;
  #panelfooter()&#xd;
#end&#xd;
{{/velocity}}</content>
